import java.util.Scanner;
import java.io.FileWriter;
import java.io.IOException;

public class StudentGradeWithFile {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        try {
            FileWriter writer = new FileWriter("student_results.txt", true); // appending results

            System.out.println("ğŸ“ STUDENT GRADE CALCULATOR WITH FILE OUTPUT");
            System.out.print("ğŸ‘¥ Enter number of students: ");
            int numStudents = scanner.nextInt();
            scanner.nextLine(); // consume newline

            for (int i = 1; i <= numStudents; i++) {
                System.out.println("\nğŸ“˜ Student " + i);
                System.out.print("Enter student name: ");
                String name = scanner.nextLine();

                System.out.print("Enter number of subjects for " + name + ": ");
                int numSubjects = scanner.nextInt();

                int[] marks = new int[numSubjects];
                int totalMarks = 0;

                for (int j = 0; j < numSubjects; j++) {
                    System.out.print("Enter marks for Subject " + (j + 1) + " (out of 100): ");
                    int mark = scanner.nextInt();

                    while (mark < 0 || mark > 100) {
                        System.out.print("âŒ Invalid! Enter valid marks (0-100): ");
                        mark = scanner.nextInt();
                    }

                    marks[j] = mark;
                    totalMarks += mark;
                }

                double average = (double) totalMarks / numSubjects;
                String grade;

                if (average >= 90) grade = "A+";
                else if (average >= 80) grade = "A";
                else if (average >= 70) grade = "B";
                else if (average >= 60) grade = "C";
                else if (average >= 50) grade = "D";
                else grade = "F";

                // Display result
                System.out.println("\nğŸ“Š RESULT for " + name + ":");
                System.out.println("Total Marks: " + totalMarks + "/" + (numSubjects * 100));
                System.out.printf("Average Percentage: %.2f%%\n", average);
                System.out.println("Grade: " + grade);

                // Save to file
                writer.write("Student: " + name + "\n");
                writer.write("Total Marks: " + totalMarks + "/" + (numSubjects * 100) + "\n");
                writer.write(String.format("Average Percentage: %.2f%%\n", average));
                writer.write("Grade: " + grade + "\n");
                writer.write("-----------------------------\n");

                scanner.nextLine(); // consume newline
            }

            writer.close();
            System.out.println("\nâœ… All student results saved to 'student_results.txt'.");

        } catch (IOException e) {
            System.out.println("âš ï¸ Error writing to file: " + e.getMessage());
        }

        scanner.close();
        System.out.println("ğŸ Program finished.");
    }
}
