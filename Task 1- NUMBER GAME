import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        int totalScore = 0;
        int round = 1;

        System.out.println("ğŸ® Welcome to the Number Guessing Game!");

        boolean playAgain = true;
        while (playAgain) {
            int numberToGuess = random.nextInt(100) + 1; // 1 to 100
            int attempts = 0;
            int maxAttempts = 7;
            boolean guessedCorrectly = false;

            System.out.println("\nğŸ” Round " + round + ": Guess a number between 1 and 100.");
            System.out.println("ğŸ’¡ You have " + maxAttempts + " attempts.");

            while (attempts < maxAttempts) {
                System.out.print("ğŸ‘‰ Enter your guess: ");
                int userGuess = scanner.nextInt();
                attempts++;

                if (userGuess == numberToGuess) {
                    System.out.println("âœ… Correct! You guessed the number in " + attempts + " attempts.");
                    guessedCorrectly = true;
                    totalScore += (maxAttempts - attempts + 1); // Higher score for fewer attempts
                    break;
                } else if (userGuess < numberToGuess) {
                    System.out.println("â¬†ï¸ Too low!");
                } else {
                    System.out.println("â¬‡ï¸ Too high!");
                }
            }

            if (!guessedCorrectly) {
                System.out.println("âŒ You've used all attempts. The correct number was: " + numberToGuess);
            }

            System.out.println("ğŸ¯ Your score: " + totalScore);

            System.out.print("ğŸ” Do you want to play another round? (yes/no): ");
            String answer = scanner.next().toLowerCase();
            if (!answer.equals("yes")) {
                playAgain = false;
            } else {
                round++;
            }
        }

        System.out.println("ğŸ Game Over! Final Score: " + totalScore);
        scanner.close();
    }
}
